<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#f0f0f0"
    android:gravity="center"
    tools:context="com.oliveoa.view.notice.AddNoticeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize">

        //标题栏

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LoginPrimaryDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@null"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="新建公告"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/isave"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@null"
                android:src="@drawable/ic_save" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                //公告标题

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#fff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center|left"
                        android:text="公告标题（必填）"
                        android:textColor="@color/tv_gray_deep"
                        android:textSize="@dimen/text_size_normal" />

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@null"
                        android:gravity="center_vertical|start"
                        android:hint="请输入标题"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="6dp"
                        android:singleLine="true"
                        android:textColor="@color/textcolor"
                        android:textColorHint="#898989"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>
                //公告内容

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#fff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center|left"
                        android:text="公告内容（必填）"
                        android:textColor="@color/tv_gray_deep"
                        android:textSize="@dimen/text_size_normal" />

                    <EditText
                        android:id="@+id/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@null"
                        android:gravity="center_vertical|start"
                        android:hint="请输入内容"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="6dp"
                        android:singleLine="true"
                        android:textColor="@color/textcolor"
                        android:textColorHint="#898989"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                //审批人
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_30"
                        android:layout_weight="1"
                        android:text="审批人"
                        android:gravity="center|left"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/tv_gray_deep" />
                    <TextView
                        android:id="@+id/person_add"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:layout_marginRight="20dp"
                        android:clickable="true"
                        android:text="＋添加"
                        android:singleLine="true"
                        android:textColor="@color/orange_main" />
                </LinearLayout>
                //审批人列表
                <LinearLayout
                    android:id="@+id/approve_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
