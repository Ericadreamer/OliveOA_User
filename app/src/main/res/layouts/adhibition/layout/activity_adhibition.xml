                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:background="#fff"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal"
