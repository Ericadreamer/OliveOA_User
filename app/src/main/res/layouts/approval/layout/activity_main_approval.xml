<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com.oliveoa.view/tools"
    android:id="@+id/dl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#f0f0f0"
    android:gravity="center"
    tools:context="com.oliveoa.view.approval.MainApprovalActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize">

        //标题栏

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LoginPrimaryDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@null"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="我的审批"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iadd"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@null" />

        </LinearLayout>

        <!--1.Android:numColumns=”auto_fit” //GridView的列数设置为自动

            2.android:columnWidth=”90dp ” //每列的宽度，也就是Item的宽度

            3.android:stretchMode=”columnWidth”//缩放与列宽大小同步

            4.android:verticalSpacing=”10dp” //两行之间的边距

            5.android:horizontalSpacing=”10dp” //两列之间的边距 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <GridView
                android:id="@+id/gridview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:columnWidth="@dimen/dp_70"
                android:gravity="center"
                android:horizontalSpacing="6dp"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="6dp">

            </GridView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>