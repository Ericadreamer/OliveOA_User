<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#f0f0f0"
    android:gravity="center"
    tools:context="com.oliveoa.view.approval.BusinessDisposedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize">

        //标题栏
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LoginPrimaryDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@null"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="申请详情"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@null" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                //详情内容
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:background="#fff"
                    android:orientation="vertical">

                    //申请人

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_22"
                            android:gravity="center|left"
                            android:text="申请人"
                            android:textColor="@color/tv_gray_deep"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="那只喵"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>

                    //申请流程

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_22"
                            android:gravity="center|left"
                            android:text="申请流程"
                            android:textColor="@color/tv_gray_deep"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="出差申请"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>

                    //出差时间

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_22"
                            android:gravity="center|left"
                            android:text="出差时间"
                            android:textColor="@color/tv_gray_deep"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/business_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="2018/06/10 -- 2018/06/10"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>
                    //出差时间

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dp_12">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_22"
                            android:gravity="center|left"
                            android:text="出差地点"
                            android:textColor="@color/tv_gray_deep"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/business_place"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="北京"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>
                </LinearLayout>
                //出差原因
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center|left"
                        android:text="出差原因"
                        android:textColor="@color/tv_gray_deep"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="22dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:lineSpacingExtra="6dp"
                        android:text="跟合约公司进行秘密合作"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_normal" />

                </LinearLayout>
                //审批进度
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#fff">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:gravity="center|left"
                        android:text="审批进度"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/dp_16" />

                </LinearLayout>
                //审批人列表
                <LinearLayout
                    android:id="@+id/approve_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>
                //审批意见
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="#fff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center|left"
                        android:text="审批意见"
                        android:textSize="@dimen/dp_16"
                        android:textColor="@color/tv_gray_deep"/>

                    <TextView
                        android:id="@+id/advise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="好好工作"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="#898989"
                        android:textSize="@dimen/dp_16" />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>