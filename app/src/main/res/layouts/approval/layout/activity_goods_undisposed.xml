<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#f0f0f0"
    android:gravity="center"
    tools:context="com.oliveoa.view.approval.GoodsUndisposedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize">

        //标题栏

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LoginPrimaryDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@null"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="申请详情"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@null" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                //详情
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/dp_1">
                    //申请人

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_22"
                            android:gravity="center|left"
                            android:text="申请人"
                            android:textColor="@color/tv_gray_deep"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="那只喵"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>

                    //被调员工编号
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="申请流程"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/tv_gray_deep"
                            android:layout_marginLeft="@dimen/dp_22"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="物品申请"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginRight="@dimen/dp_20"
                            />

                    </LinearLayout>

                    //离职员工编号
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="选择物品"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/tv_gray_deep"
                            android:layout_marginLeft="@dimen/dp_22"
                            />
                        <TextView
                            android:id="@+id/goods"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="笔记本"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginRight="@dimen/dp_20"
                            />

                    </LinearLayout>

                    //离职日期
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="取用时间"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/tv_gray_deep"
                            android:layout_marginLeft="@dimen/dp_22"
                            />
                        <TextView
                            android:id="@+id/start_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="2018/8/20"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginRight="@dimen/dp_20"
                            />

                    </LinearLayout>
                    //所属部门原职务
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dp_12">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="归还时间"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/tv_gray_deep"
                            android:layout_marginLeft="@dimen/dp_22"
                            />
                        <TextView
                            android:id="@+id/return_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="2018/8/30"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginRight="@dimen/dp_20"
                            />

                    </LinearLayout>
                </LinearLayout>

                //按钮

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">

                    <Button
                        android:id="@+id/disagree"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_1"
                        android:layout_marginRight="@dimen/dp_1"
                        android:layout_weight="1"
                        android:background="@drawable/btn_orange_selector"
                        android:text="不同意"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/agree"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/dp_1"
                        android:layout_marginRight="@dimen/dp_1"
                        android:layout_weight="1"
                        android:background="@drawable/btn_orange_selector"
                        android:text="同    意"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>

