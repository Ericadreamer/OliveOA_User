<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#f0f0f0"
    android:gravity="center"
    tools:context="com.oliveoa.view.documentmanagement.NuclearDraftActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize">

        //标题栏

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LoginPrimaryDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iback"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@null"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="我的核稿"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/add"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_2"/>

        </LinearLayout>

        <!--顶部tab标签容器-->
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab_layout"
            android:background="@color/white"
            app:tabIndicatorColor="@color/tab_tv_selected"
            app:tabSelectedTextColor="@color/tab_tv_selected"
            app:tabTextColor="@color/tv_gray_deep"
            android:elevation="@dimen/dp_3"
            app:tabMode="fixed">
        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/info_viewpager"
            android:layout_marginTop="@dimen/dp_55"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />

    </LinearLayout>

</RelativeLayout>

