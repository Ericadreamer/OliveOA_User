<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#f0f0f0"
    android:gravity="center"
    tools:context="com.oliveoa.view.documentmanagement.DraftAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize">

        //标题栏

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LoginPrimaryDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iback"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@null"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="新建拟稿"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/save"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:layout_marginLeft="@dimen/dp_2"
                android:background="@null"
                android:src="@drawable/ic_save" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                //公文标题

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#fff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center|left"
                        android:text="公文标题（必填）"
                        android:textColor="@color/tv_gray_deep"
                        android:textSize="@dimen/text_size_normal" />

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@null"
                        android:gravity="center_vertical|start"
                        android:hint="请输入标题"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="6dp"
                        android:singleLine="true"
                        android:textColor="@color/textcolor"
                        android:textColorHint="#898989"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>
                //公文内容

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#fff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center|left"
                        android:text="公文内容（必填）"
                        android:textColor="@color/tv_gray_deep"
                        android:textSize="@dimen/text_size_normal" />

                    <EditText
                        android:id="@+id/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@null"
                        android:gravity="center_vertical|start"
                        android:hint="请输入内容"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="6dp"
                        android:singleLine="true"
                        android:textColor="@color/textcolor"
                        android:textColorHint="#898989"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>
                //选择核稿人

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="核稿人"
                        android:textColor="@color/tv_gray_deep"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/nuclear_person"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:hint="请选择核稿人"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="#898989"
                        android:textSize="@dimen/text_size_normal" />

                    <ImageView
                        android:id="@+id/nuclear_select"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:src="@drawable/ic_next" />
                </LinearLayout>
                //选择签发人

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="签发人"
                        android:textColor="@color/tv_gray_deep"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/issue_person"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:hint="请选择签发人"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="#898989"
                        android:textSize="@dimen/text_size_normal" />

                    <ImageView
                        android:id="@+id/issue_select"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:src="@drawable/ic_next" />
                </LinearLayout>

                //附件上传

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180"
                    android:background="#fff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center|left"
                            android:text="附件上传"
                            android:textColor="@color/tv_gray_deep"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_20"
                        android:background="@drawable/boder"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@drawable/btn_add" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_10"
                            android:singleLine="true"
                            android:text="请选择文件"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>

                    //取消上传

                    <LinearLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_40"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_200"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@color/tab_tv_normal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="取消上传"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
