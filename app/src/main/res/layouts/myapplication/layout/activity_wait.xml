<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.oliveoa.view.myapplication.WaitActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/application_item"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#fff"
                android:layout_marginBottom="@dimen/dp_1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/application_pic"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/leave_pic"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_20"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/item_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:singleLine="true"
                        android:gravity="left"
                        android:text="请假申请"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:textColor="#373c3e"/>
                    <TextView
                        android:id="@+id/item_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:gravity="left"
                        android:text="今天发高烧了想请假一天"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_marginRight="@dimen/dp_20"
                        android:textColor="#808080"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/wait_pic" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/wait_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:text="没有更多数据了"
                android:textColor="@color/tv_gray_lit"
                android:layout_marginTop="@dimen/dp_4"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
