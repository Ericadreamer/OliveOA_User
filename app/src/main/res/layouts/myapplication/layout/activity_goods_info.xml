<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:layout_gravity="center_vertical"
    tools:context="com.oliveoa.view.myapplication.GoodsInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize">

        //标题栏
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LoginPrimaryDark"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/application_info"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />
            <ImageView
                android:id="@+id/isave"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                //详情
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/dp_1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:text="申请内容"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:gravity="center|left"
                        android:layout_marginLeft="@dimen/dp_20"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/tv_gray_normal"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20">
                    </View>

                    //被调员工编号
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="申请流程"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/tv_gray_deep"
                            android:layout_marginLeft="@dimen/dp_22"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="物品申请"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginRight="@dimen/dp_20"
                            />

                    </LinearLayout>

                    //离职员工编号
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="选择物品"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/tv_gray_deep"
                            android:layout_marginLeft="@dimen/dp_22"
                            />
                        <TextView
                            android:id="@+id/goods"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="笔记本"
                            android:textSize="@dimen/text_size_normal"
                            android:singleLine="true"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginRight="@dimen/dp_20"
                            />

                    </LinearLayout>

                    //离职日期
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="取用时间"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/tv_gray_deep"
                            android:layout_marginLeft="@dimen/dp_22"
                            />
                        <TextView
                            android:id="@+id/start_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="2018/8/20"
                            android:textSize="@dimen/text_size_normal"
                            android:singleLine="true"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginRight="@dimen/dp_20"
                            />

                    </LinearLayout>
                    //所属部门原职务
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dp_5">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="归还时间"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/tv_gray_deep"
                            android:layout_marginLeft="@dimen/dp_22"
                            />
                        <TextView
                            android:id="@+id/return_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:text="2018/8/30"
                            android:textSize="@dimen/text_size_normal"
                            android:singleLine="true"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginRight="@dimen/dp_20"
                            />

                    </LinearLayout>
                </LinearLayout>

                //审批进度
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:text="@string/progress"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:gravity="center|left"
                        android:layout_marginLeft="@dimen/dp_20"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/tv_gray_normal"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20">
                    </View>
                    <LinearLayout
                        android:id="@+id/approve_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </ScrollView>

    </LinearLayout>

</LinearLayout>
