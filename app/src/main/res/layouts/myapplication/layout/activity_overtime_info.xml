<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:layout_gravity="center_vertical"
    tools:context="com.oliveoa.view.myapplication.OvertimeInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize">

        //标题栏
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LoginPrimaryDark"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/application_info"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />
            <ImageView
                android:id="@+id/isave"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp" />

        </LinearLayout>

        //审批进度
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_marginBottom="@dimen/dp_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:text="@string/progress"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin_medium"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/dp_20"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/tv_gray_normal"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@drawable/yonghu"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="哪只蕉"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:text="待审核"
                    android:textColor="@color/tv_gray_deep"
                    android:layout_marginRight="@dimen/dp_20"
                    />

            </LinearLayout>
        </LinearLayout>

        //详情
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:background="#fff"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="申请流程"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="加班申请"
                    android:textColor="@color/tv_gray_deep"
                    android:layout_marginRight="@dimen/dp_20"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="加班时间"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="2018/06/10 19:00 -- 2018/06/10 22:00"
                    android:textColor="@color/tv_gray_deep"
                    android:layout_marginRight="@dimen/dp_20"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="加班原因"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="赶项目进度"
                    android:textColor="@color/tv_gray_deep"
                    android:layout_marginRight="@dimen/dp_20"
                    />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
