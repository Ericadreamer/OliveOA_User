<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    tools:context="com.oliveoa.view.myapplication.GoodsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize">

        //标题栏
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LoginPrimaryDark"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新建申请"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />
            <ImageView
                android:id="@+id/isave"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:src="@drawable/ic_save"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                //申请流程
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_65"
                    android:orientation="vertical"
                    android:background="#fff"
                    android:layout_marginBottom="@dimen/dp_10">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:text="申请流程"
                        android:gravity="center|left"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/tv_gray_deep"
                        android:layout_marginTop="@dimen/dp_5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:text="@string/goods"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="@dimen/dp_5"/>
                </LinearLayout>
                //选择物品
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/dp_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="选择物品（必选）"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/tv_gray_deep"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/goods"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:singleLine="true"
                        android:hint="请选择物品"
                        android:textColorHint="#898989"
                        android:textColor="@color/colorPrimary"
                        />
                    <ImageView
                        android:id="@+id/goods_list"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_next" />
                </LinearLayout>
                //取用时间
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="取用时间（必选）"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/tv_gray_deep"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:singleLine="true"
                        android:hint="请选择取用时间"
                        android:textColorHint="#898989"
                        android:textColor="@color/colorPrimary"
                        />
                    <ImageView
                        android:id="@+id/start_choose"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_next"
                        android:onClick="onYearMonthDayPicker1"/>
                </LinearLayout>
                //归还时间
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="归还时间（必选）"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/tv_gray_deep"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/return_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:singleLine="true"
                        android:hint="请选择归还时间"
                        android:textColorHint="#898989"
                        android:textColor="@color/colorPrimary"
                        />
                    <ImageView
                        android:id="@+id/return_choose"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_next"
                        android:onClick="onYearMonthDayPicker2"/>
                </LinearLayout>
                //审批人
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_30"
                        android:layout_weight="1"
                        android:text="审批人"
                        android:gravity="center|left"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/tv_gray_deep" />
                    <TextView
                        android:id="@+id/person_add"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:layout_marginRight="20dp"
                        android:clickable="true"
                        android:text="＋添加"
                        android:singleLine="true"
                        android:textColor="@color/orange_main" />
                </LinearLayout>
                //审批人列表
                <LinearLayout
                    android:id="@+id/approve_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
