<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com.oliveoa.view/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#f0f0f0"
    android:gravity="center"
    tools:context="com.oliveoa.view.note.MyNoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize">

        //标题栏

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iback"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="18dp"
                android:src="@drawable/note_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:text="便签"
                android:layout_weight="1"
                android:textColor="@color/tv_gray_lit"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/note_delete" />



        </LinearLayout>

        //便签列表
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp_22">

                <EditText
                    android:id="@+id/note_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="记事"
                    android:inputType="textMultiLine"
                    android:textColorHint="#898989"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:lineSpacingExtra="6dp"
                    android:gravity="center_vertical|start"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@null"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin = "20dp"
                        android:hint="请输入离职原因"
                        android:inputType="textMultiLine"
                        android:background="@null"
                        android:gravity="center_vertical|start"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="@color/textcolor"
                        android:singleLine="true"
                        android:textColorHint="#898989"
                        android:textSize="@dimen/text_size_normal"
                        android:lineSpacingExtra="6dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <!--<android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_50"/>-->


    </LinearLayout>
</RelativeLayout>
